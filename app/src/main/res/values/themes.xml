<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Write about Activity or Application theme styling code in themes.xml  -->

    <!-- Base application theme. -->
    <style name="BestPracticeAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item> <!-- Toolbar Text Color-->
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="drawerArrowStyle">@style/MyTheme.DrawerArrowToggle</item>
    </style>
</resources>